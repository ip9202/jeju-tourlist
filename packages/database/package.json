{
  "name": "@jeju-tourlist/database",
  "version": "1.0.0",
  "description": "Database package for Jeju Tourlist",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/seed.ts",
    "db:seed:categories": "tsx prisma/seed-categories.ts",
    "batch:run": "tsx src/scripts/batch-scheduler.ts",
    "batch:test": "NODE_ENV=test tsx src/scripts/batch-scheduler.ts"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^6.0.0",
    "dotenv-flow": "^4.0.0",
    "prisma": "^5.22.0",
    "zod": "^4.1.9"
  },
  "prisma": {
    "seed": "tsx src/seed.ts"
  }
}
