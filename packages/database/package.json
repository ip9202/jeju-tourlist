{
  "name": "@jeju-tourlist/database",
  "version": "1.0.0",
  "description": "Database package for Jeju Tourlist",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "prisma": "^5.22.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@jeju-tourlist/types": "workspace:*",
    "@jeju-tourlist/config": "workspace:*"
  }
}
